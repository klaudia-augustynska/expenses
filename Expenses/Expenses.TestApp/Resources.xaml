<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Expenses.TestApp">

    <Style x:Key="field" TargetType="{x:Type FrameworkElement}">
        <Setter Property="Margin" Value="3 3 3 10"/>
    </Style>
    
    <Style x:Key="h1" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource field}">
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style x:Key="h2" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource field}">
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style x:Key="mainGrid" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="20"/>
    </Style>

    <Style x:Key="button" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="togglebutton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="bigButton" TargetType="{x:Type Button}" BasedOn="{StaticResource button}">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>