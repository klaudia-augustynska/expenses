<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Expenses.TestApp">

    <Style x:Key="field" TargetType="{x:Type FrameworkElement}">
        <Setter Property="Margin" Value="0 0 0 10"/>
    </Style>
    
    <Style x:Key="h1" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource field}">
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style x:Key="mainGrid" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="20"/>
    </Style>
    
</ResourceDictionary>