<UserControl x:Class="Expenses.TestApp.Views.Rejestracja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expenses.TestApp"
        mc:Ignorable="d">
    <Grid Style="{StaticResource mainGrid}">
        <StackPanel>
            <TextBlock Style="{StaticResource h1}">Rejestracja</TextBlock>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource field}">Login:</TextBlock>
                <TextBox  Style="{StaticResource field}" Grid.Column="1" 
                          x:Name="login" Text="{Binding Login}"></TextBox>

                <TextBlock  Style="{StaticResource field}" Grid.Row="1">Hasło:</TextBlock>
                <PasswordBox Style="{StaticResource field}"  Grid.Row="1" Grid.Column="1" 
                             x:Name="password"></PasswordBox>
            </Grid>

            <Button  Style="{StaticResource field}" 
                     x:Name="zarejestruj"
                     Command="{Binding Zarejestruj}">Zarejestruj</Button>

            <Button  Style="{StaticResource field}" 
                     x:Name="przejdźDoLogowania"
                     Command="{Binding PrzejdzDoLogowania}">Przejdź do logowania</Button>
        </StackPanel>
    </Grid>
</UserControl>
